<div class="container mt-3 mb-3">
  <%= form_with url: searches_search_path, class: "d-flex flex-row bd-highlight", method: :get, local: true do |f| %>
    <div class="bd-highlight d-flex flex-column bd-highlight mr-2">
      <%= f.select :model, options_for_select({"User"=>"user","Book"=>"book"}), {}, { class: "form-select mb-1" } %>
      <%= f.select :method, options_for_select({"完全一致"=>"perfect","前方一致"=>"forward", "後方一致"=>"backward","部分一致"=>"partial"}), {}, { class: "form-select" } %>
    </div>  
    <%= f.text_field :content, { class: "flex-grow-1 bd-highlight mr-2 pl-2 pr-2" } %>
    <%= f.submit '検索', { class: "btn btn-primary" } %>
  <% end %>
</div>