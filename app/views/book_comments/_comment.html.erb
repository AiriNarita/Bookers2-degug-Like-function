<% book_comments.each do |book_comment| %>
  <div id="book_comment_<%= book_comment.id %>">
    <%= link_to users_path(book_comment) do %>
      <%= image_tag book_comment.user.get_profile_image, size:'50x50' %>
      <%= book_comment.user.name %>
    <% end %> 
    <%= book_comment.created_at.strftime('%Y/%m/%d') %>
    <%= book_comment.comment %> 
    
    <!--コメント削除-->
    <% if book_comment.user == current_user %>
      <%= link_to book_book_comment_path(book_comment.book, book_comment), class: "btn btn-sm btn-danger", method: :delete, remote: true, data: {"turbolinks" => false} do %>
        Destroy
      <% end %>

    <% end %>
    <!--コメント削除ここまで-->
  </div>
<% end %>